<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/fundo_degrade"
    tools:context="aplicativotcc.cursoandroid.com.aplicativotcc.PrincipalActivity">

    <ImageButton
        android:layout_width="230dp"
        android:layout_height="90dp"
        android:id="@+id/glossarioId"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:background="@drawable/botaoglossario"
        android:elevation="3dp"/>

    <ImageButton
        android:layout_width="230dp"
        android:layout_height="90dp"
        android:id="@+id/alfabetoId"
        android:layout_below="@+id/glossarioId"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:background="@drawable/botaoalfabeto"
        android:elevation="3dp"/>

    <ImageButton
        android:layout_width="230dp"
        android:layout_height="90dp"
        android:id="@+id/numerosId"
        android:layout_below="@+id/alfabetoId"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:background="@drawable/botaonumero"
        android:elevation="3dp"/>

    <ImageButton
        android:layout_width="230dp"
        android:layout_height="90dp"
        android:id="@+id/sobreId"
        android:layout_below="@+id/numerosId"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:background="@drawable/botaosobre"
        android:elevation="3dp"/>
</RelativeLayout>
